<div class="card-body zoom"
    <%if (card.type === "normal") {%>
        style="background-image: url('/images/types/bg-normal.png')"  
        <%} else if (card.type === "fighting") {%>
        style="background-image: url('/images/types/fight-bg.png')" 

        <%} else if (card.type === "steel") {%>
        style="background-image: url('/images/types/metal-bg.png')" 

        <%} else if (card.type === "fire") {%>
        style="background-image: url('/images/types/bg-red.png')"  

        <%} else if (card.type === "ground") {%>
        style="background-image: url('/images/types/ground-bg.png')"  

        <%} else if (card.type === "dragon") {%>
        style="background-image: url('/images/types/dragon-bg.png')"  

        <%} else if (card.type === "water") {%>
        style="background-image: url('/images/types/blue-bg.png')" 

        <%} else if (card.type === "grass") {%>
        style="background-image: url('/images/types/grass-bg.png')"   

        <%}else if (card.type === "electric") {%>
        style="background-image: url('/images/types/lightening-bg.png')" 

        <%}else if (card.type === "psychic") {%>
        style="background-image: url('/images/types/purple-bg.png')" 

        <%}%> 
        >
        <div id="name">
            <%=card.name%>
        </div>
             
         <span class="type">
            <%if (card.type === "normal") {%>
                <img class="types" src="/images/types/normal.png">
                <%} else if (card.type === "fighting") {%>
                <img class="types" src="/images/types/combat.png">

                <%} else if (card.type === "steel") {%>
                <img class="types" src="/images/types/metal.png">

                <%} else if (card.type === "fire") {%>
                <img class="types" src="/images/types/fire.png"> 

                <%} else if (card.type === "ground") {%>
                <img class="types" src="/images/types/ground-type.png"> 

                <%} else if (card.type === "dragon") {%>
                <img class="types" src="/images/types/dragon-type.png"> 

                <%} else if (card.type === "water") {%>
                <img class="types" src="/images/types/water.png"> 

                <%} else if (card.type === "grass") {%>
                <img class="types" src="/images/types/grass-type.png"> 

                <%}else if (card.type === "electric") {%>
                <img class="types" src="/images/types/elektric.png"> 

                <%}else if (card.type === "psychic") {%>
                <img class="types" src="/images/types/psy.png">
            <%}%> 
        </span>

        <div id="hp-box">
            <font size="2px">HP</font><%=card.hp%>
        </div>

        <div id="img-box-border">
            <div id="img-box">
                <img src="<%=card.url%>">
            </div>
        </div>

<div id="yellow-bar"><div class="stats"><%=card.stats%></div></div>

        <div class="attack-box">
            <div class="attack"><%=card.attack%></div>
            <div class="damage"><%=card.damage%></div>
        </div>
            <div>    
                <div class="description"><%=card.description%></div>
            </div>

        <div class="attack-box2">
            <div class="attack"><%=card.attack2%></div>
            <div class="damage"><%=card.damage2%></div>
        </div>
            <div>
                <div class="description"><%=card.description2%></div>
            </div>

        <div id="weak-resist-box">
            <div id="weakness">Weakness<br/>
                <small><%=card.weakness%></small>
            </div>

            <div id="resistance">Resistance<br/>
                <small><%=card.resistance%></small>
            </div>

            <div id="bottom-box"><%=card.boxBottom%></div>
            
        </div>
</div>