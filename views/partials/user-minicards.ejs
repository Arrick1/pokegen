
<% for (let i = 0; i < user.cards.length; i++) {%>
    <a href="/cards/<%=user.cards[i]._id%>"> 
        <div class="m-card-body zoom"
            <%if (user.cards[i].type === "normal") {%>
            style="background-image: url('/images/types/bg-normal.png')"  
            <%} else if (user.cards[i].type === "fighting") {%>
            style="background-image: url('/images/types/fight-bg.png')" 
            <%} else if (user.cards[i].type === "steel") {%>
            style="background-image: url('/images/types/metal-bg.png')" 
            <%} else if (user.cards[i].type === "fire") {%>
            style="background-image: url('/images/types/bg-red.png')"  
            <%} else if (user.cards[i].type === "ground") {%>
            style="background-image: url('/images/types/ground-bg.png')"  
            <%} else if (user.cards[i].type === "dragon") {%>
            style="background-image: url('/images/types/dragon-bg.png')"  
            <%}else if (user.cards[i].type === "water") {%>
            style="background-image: url('/images/types/blue-bg.png')" 
            <%} else if (user.cards[i].type === "grass") {%>
            style="background-image: url('/images/types/grass-bg.png')"   
            <%}else if (user.cards[i].type === "electric") {%>
            style="background-image: url('/images/types/lightening-bg.png')"   
            <%}else if (user.cards[i].type === "psychic") {%>
            style="background-image: url('/images/types/purple-bg.png')" 
            <%}%> >
            <div id="m-name">
            <%=user.cards[i].name%>
            </div>
            <span class="type">
                <%if (user.cards[i].type === "normal") {%>
                    <img class="m-types" src="/images/types/normal.png">
                    <%} else if (user.cards[i].type === "fighting") {%>
                    <img class="m-types" src="/images/types/combat.png">
                    <%} else if (user.cards[i].type === "steel") {%>
                    <img class="m-types" src="/images/types/metal.png">
                    <%} else if (user.cards[i].type === "fire") {%>
                    <img class="m-types" src="/images/types/fire.png"> 
                    <%} else if (user.cards[i].type === "ground") {%>
                    <img class="m-types" src="/images/types/ground-type.png"> 

                    <%} else if (user.cards[i].type === "dragon") {%>
                    <img class="m-types" src="/images/types/dragon-type.png"> 

                    <%} else if (user.cards[i].type === "water") {%>
                    <img class="m-types" src="/images/types/water.png"> 
                    <%} else if (user.cards[i].type === "grass") {%>
                    <img class="m-types" src="/images/types/grass-type.png"> 
                    <%}else if (user.cards[i].type === "electric") {%>
                    <img class="m-types" src="/images/types/elektric.png"> 
                    <%}else if (user.cards[i].type === "psychic") {%>
                    <img class="m-types" src="/images/types/psy.png">
                <%}%> 
            </span>
            <div id="m-hp-box">
                <font size="1px">HP</font><%=user.cards[i].hp%>
            </div>

            <div id="m-img-box-border">
                <div id="m-img-box">
                    <img src="<%=user.cards[i].url%>">
                </div>
            </div>

        <div id="m-yellow-bar"><div class="m-stats"><%=user.cards[i].stats%></div></div>

            <div class="m-attack-box">
                <div class="m-attack"><%=user.cards[i].attack%></div>
                <div class="m-damage"><%=user.cards[i].damage%></div>
                <div>
                    <div class="m-description"><%=user.cards[i].description2%></div>
                </div>
            </div>


            <div class="m-attack-box2">
                <div class="m-attack"><%=user.cards[i].attack2%></div>
                <div class="m-damage"><%=user.cards[i].damage2%></div>
                <div class="descript-container">
                    <div class="m-description2"><%=user.cards[i].description2%></div>
                </div>
            </div>


            <div id="m-weak-resist-box">
                <div id="m-weakness">Weakness<br/>
                    <small><%=user.cards[i].weakness%></small>
                </div>
                <div id="m-resistance">Resistance<br/>
                    <small><%=user.cards[i].resistance%></small>
                </div>

                <div id="m-bottom-box"><%=user.cards[i].boxBottom%></div>
                
            </div>
        </div>
    </a>
<% } %>