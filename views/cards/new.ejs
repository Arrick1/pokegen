<%- include('../partials/header')%>
<div id="new-container" class="grid-container">

    <div class="grid-header">
        <%- include('../partials/head')%>
        <h1>Generate PokeGen Card!</h1>
    </div>

    <div id="new-main" class="grid-n-menu">
    </div>

    <div id="" class="grid-n-main">
             <div class="container">
                <div class="left">
                    Name:<br />  
                    Image Url:<br />  
                    HP: <br />  
                    Element Type:<br /> 
                    Stats: <br /> 
                    Attack:<br />  
                    Description: <br /> 
                    Damage:<br /> 
                    Attack2:<br />  
                    Description2: <br />  
                    Damage2:<br /> 
                    Weakness:<br />  
                    Resistance:<br /> 
                    Story:<br /> 
                </div>

                <div class="right">
                    <form action="/cards" method="POST">
                        <input type="text" name="name" maxlength="15" placeholder="add name"/><br/>
                        <input type="text" name="url" placeholder="add image url" title="hover"/><br/>
                        <input type="text" name="hp" maxlength="3" placeholder="add HP"/><br/>
                        <select name="type"><br/>
                                <option value="normal">Normal</option>
                                <option value="fighting">Fighting</option>
                                <option value="steel">Steel</option>
                                <option value="fire">Fire</option>
                                <option value="water" select>Water</option>
                                <option value="grass">Grass</option>
                                <option value="electric">Electric</option>
                                <option value="psychic">Psychic</option>
                        </select><br/>
                        <input type="text" name="stats" maxlength="36" placeholder="add stats"/><br/>
                        <input type="text" name="attack" maxlength="16" placeholder="add 1st attack"/><br/>
                        <input type="text" name="description" maxlength="100" class="description-input" placeholder="add attack description"/><br/>
                        <input type="text" name="damage" maxlength="30" placeholder="add 1st damage"/><br/>
                        <input type="text" name="attack2" maxlength="16" placeholder="add 2nd attack"/><br/>
                        <input type="text" name="description2" maxlength="100" placeholder="add attack description"/><br/>
                        <input type="text" name="damage2" maxlength="30" placeholder="add 2nd damage"/><br/>
                        <input type="text" name="weakness" maxlength="13" placeholder="add weakness"/><br/>
                        <input type="text" name="resistance" maxlength="13" placeholder="add resistance"/><br/>
                        <input type="text" name="story" placeholder="Tell us about your card"/><br/>
                        <button type="submit">Create</button>
                    </form>
                </div>
            </div>
    </div>

    <div class="grid-n-right">
    <%-include('../partials/samplecard')%>
    </div>

    <div class="grid-n-footer">
    <%- include('../partials/footer')%>
    </div>

</div>





